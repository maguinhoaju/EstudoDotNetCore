@model IEnumerable<Core.Produto>

    <h2>Produtos</h2>

    <div>
        <table class="table table-hover">
            <tr>
                <a href="/Produto/Salvar" class="btn">Novo Produto</a>
            </tr>
            <tr>
                <a href="/Produto/ListarInativos" class="btn">Listar Produtos Inativos</a>
            </tr>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Categoria</th>
                        <th> </th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model){
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Categoria.Nome</td>
                            <td>
                                <a href="/Produto/Editar/@item.Id" class="btn">Editar</a>
                            </td>
                            <td>
                                <a href="/Produto/Deletar/@item.Id" class="btn">Deletar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>